<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Css -->
  <link rel="stylesheet" href="/css/globalStyle.css" />
  <link rel="shortcut icon" href="/images/OIG3.HcFjYMBA3iNvsE-removebg-preview.png" type="image/x-icon" />

  <!-- Boostrap link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous" defer></script>
</head>
<div class="position-relative overflow-hidden radial-gradient h-100" style="background: var(--background_color)">
  <div class="row m-0 d-flex align-items-center justify-content-center w-100 h-100">
    <div class="col-12 col-md-4">
      <div class="card mb-0 rounded-3">
        <div class="card-body">
          <a class="text-nowrap logo-img text-center d-block w-100">
            <img src="/images/OIG3.HcFjYMBA3iNvsE-removebg-preview.png" alt="Logo" loading="lazy" height="200px" width="200px" class="img-fluid" />
          </a>
          <h4 class="text-center mb-4">Công Ty TNHH Đăng Quang</h4>
          <%- include('../partials/notificationMessage') %>
          <form action="/dang-nhap/login" method="post">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Tài khoản</label>
              <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" />
            </div>
            <div class="mb-4">
              <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
              <input type="password" name="password" class="form-control" id="exampleInputPassword1" />
            </div>
            <div class="d-flex align-items-center justify-content-between mb-4">
              <div class="form-check">
                <input class="form-check-input primary" type="checkbox" id="flexCheckChecked" value="true" name="rememberMe" />
                <label class="form-check-label text-dark" for="flexCheckChecked">
                  Ghi nhớ 30 ngày
                </label>
              </div>
            </div>
            <button type="submit" onclick="handleFormSubmit(this)" class=" btn btn-primary w-100 fs-4 mb-4 rounded-2">
              Đăng nhập
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>