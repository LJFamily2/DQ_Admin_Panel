<head>
  <!-- js -->
  <script src="/js/datatable.js"></script>
  <script src="/js/inputFieldRestriction.js" defer></script>
  <!-- Slim select -->
  <script src="/js/slim-select.js" defer></script>
</head>

<%- include('../partials/totalValue') %> <% if(user.role === 'Admin'){ %>
<button
  type="button"
  class="btn btn-danger mx-2 mx-md-3 mt-2"
  data-bs-toggle="modal"
  data-bs-target="#deleteAll"
  style="width: max-content"
>
  Xóa tất cả thông tin
</button>
<% } %>
<div class="row m-0 m-md-2 g-3 mb-4">
  <div class="col-12 col-md-9 mt-2">
    <div class="card" style="box-shadow: 0 1px 2px">
      <div class="card-header bg-transparent">
        <%- include('../partials/dateSelection.ejs') %>
      </div>
      <div class="card-body">
        <table class="table table-striped" id="spends_table">
          <thead>
            <tr>
              <th>STT</th>
              <th>Ngày</th>
              <th>Hàng hóa</th>
              <th>Số lượng</th>
              <th>Đơn giá</th>
              <th>Tổng</th>
              <th>Ghi chú</th>
              <th>Chỉnh sửa</th>
            </tr>
          </thead>

          <tbody>
            <% spends.forEach( (spend,index) => { %>
            <!-- Modal for updating -->
            <div
              class="modal fade"
              id="staticBackdrop<%= spend._id %>"
              data-bs-backdrop="static"
              data-bs-keyboard="false"
              tabindex="-1"
              aria-labelledby="staticBackdropLabel"
              aria-hidden="true"
            >
              <div
                class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
              >
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">
                      Cập nhật thông tin <%= spend.date.toLocaleDateString() %>
                    </h1>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>

                  <form
                    action="/quan-ly-chi-tieu/update/<%= spend._id %>"
                    method="post"
                  >
                    <div class="modal-body">
                      <div>
                        <label for="date" class="form-label fw-bold"
                          >Ngày
                        </label>
                        <input
                          type="date"
                          class="form-control"
                          id="date"
                          name="date"
                          required
                          autofocus
                          value="<%= spend.date.toISOString().slice(0,10)  %>"
                        />
                      </div>

                      <div class="my-3">
                        <label for="product" class="form-label fw-bold"
                          >Hàng hóa</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="product"
                          name="product"
                          placeholder="Dầu"
                          required
                          value="<%= spend.product %>"
                          <%= spend.product === 'lương' ? 'disabled' : '' %>
                        />
                      </div>

                      <% if(spend.product === 'lương'){ %>
                      <div class="my-3">
                        <label for="price" class="form-label fw-bold"
                          >Đơn giá</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="price"
                          name="price"
                          placeholder="20.000"
                          oninput="handleQuantityInput(this)"
                          value="<%= spend.price.toLocaleString('vi-VN') %>"
                        />
                      </div>
                      <% } else { %>
                      <div class="my-3">
                        <label for="quantity" class="form-label fw-bold"
                          >Số lượng</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="quantity"
                          name="quantity"
                          placeholder="1.500"
                          oninput="handleQuantityInput(this)"
                          value="<%= spend.quantity.toLocaleString('vi-VN') %>"
                        />
                      </div>

                      <div class="my-3">
                        <label for="price" class="form-label fw-bold"
                          >Đơn giá</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="price"
                          name="price"
                          placeholder="20.000"
                          oninput="handleQuantityInput(this)"
                          value="<%= spend.price.toLocaleString('vi-VN') %>"
                        />
                      </div>

                      <% } %>

                      <div class="my-3">
                        <label for="notes" class="form-label fw-bold"
                          >Ghi chú</label
                        >
                        <textarea
                          type="text"
                          class="form-control"
                          rows="2"
                          id="notes"
                          name="notes"
                        >
<%= spend.notes %></textarea
                        >
                      </div>
                    </div>
                    <div class="modal-footer">
                      <!-- Buttons -->
                      <button type="submit" class="btn btn-primary">Lưu</button>
                      <button type="reset" class="btn text-dark">
                        Đặt lại
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <!-- Delete confirming modal  -->
            <div
              class="modal fade"
              id="deleteModalToggle<%= spend._id %>"
              aria-hidden="true"
              aria-labelledby="exampleModalToggleLabel"
              tabindex="-1"
            >
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                      Xóa thông tin ngày <%=
                      spend.date.toLocaleDateString("vi-VN") %>
                    </h1>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <form
                    action="/quan-ly-chi-tieu/delete/<%= spend._id %>"
                    method="post"
                  >
                    <div class="modal-body">
                      Bạn có muốn xóa thông tin ngày
                      <strong
                        ><%= spend.date.toLocaleDateString("vi-VN") %></strong
                      >
                      ? Hành động này không thể hoàn tác.
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-danger">
                        Xác nhận
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="5">Tổng</th>
              <th></th>
              <th colspan="2"></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-3 mt-2">
    <div class="card" style="box-shadow: 0 1px 2px">
      <div class="card-header bg-transparent">
        <h4 class="m-0">Tạo chi tiêu</h4>
      </div>
      <form action="/quan-ly-chi-tieu/addData" method="post">
        <div class="card-body">
          <%- include('../partials/notificationMessage.ejs') %>
          <div>
            <label for="date" class="form-label fw-bold">Ngày </label>
            <input
              type="date"
              class="form-control"
              id="date"
              name="date"
              required
              autofocus
            />
          </div>

          <div class="my-3">
            <label class="form-label fw-bold">Loại chi tiêu</label>
            <select
              class="form-control"
              onchange="displayOption(this)"
              style="cursor: pointer"
            >
              <option disabled selected>Chọn loại chi tiêu</option>
              <option value="Hàng hóa">Hàng hóa</option>
              <option value="Lương">Lương</option>
            </select>
          </div>

          <div class="selectedOption"></div>

          <div class="my-3">
            <label for="notes" class="form-label fw-bold">Ghi chú</label>
            <textarea
              type="text"
              class="form-control"
              rows="2"
              id="notes"
              name="notes"
            ></textarea>
          </div>
        </div>
        <div class="card-footer bg-transparent">
          <!-- Buttons -->
          <button type="submit" class="btn btn-primary">Tạo</button>
          <button type="reset" class="btn text-dark">Làm mới</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal for deleting all -->
<div
  class="modal fade"
  id="deleteAll"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="deleteUsers"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteUsers">Xóa tất cả chi tiêu</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <form action="/quan-ly-chi-tieu/deleteAll" method="post">
        <div class="modal-body">
          Bạn có muốn xóa <strong class="fs-3">tất cả</strong> thông tin ? Hành
          động này không thể hoàn tác.
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Xác nhận</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const columns = [
    { data: 'no', visible: false, orderable: false },
    { data: 'date' },
    { data: 'product', orderable: false },
    { data: 'quantity', orderable: false },
    { data: 'price', orderable: false },
    { data: 'total', orderable: false },
    { data: 'notes', orderable: false },
    { data: 'id', orderable: false },
  ];

  initializeDataTable(
    '#spends_table',
    '/quan-ly-chi-tieu/getData',
    '#staticBackdrop',
    '#deleteModalToggle',
    columns,
    null,
    '#filterButton',
    '#startDate',
    '#endDate',
    '#clearFilterButton',
    false,
    false,
    false,
    false,
    false,
    false,
    false,
    false,
    true,
  );

  const displayOption = element => {
    const value = element.value;
    const selectedOption = document.querySelector('.selectedOption');

    if (value === 'Hàng hóa') {
      selectedOption.innerHTML = `
      <div class="my-3">
        <label for="product" class="form-label fw-bold">Tên hàng hóa</label>
        <input
          type="text"
          class="form-control"
          id="product"
          name="product"
          placeholder="dầu"
        />
      </div>
      <div class="my-3">
        <label for="quantity" class="form-label fw-bold">Số lượng</label>
        <input
          type="text"
          class="form-control"
          id="quantity"
          name="quantity"
          placeholder="1.500"
          oninput="handleQuantityInput(this)"
        />
      </div>
  
        <div class="my-3">
          <label for="price" class="form-label fw-bold">Đơn giá</label>
          <input
            type="text"
            class="form-control"
            id="price"
            name="price"
            placeholder="20.000"
            oninput="handleQuantityInput(this)"
          />
        </div>
      `;
    } else {
      selectedOption.innerHTML = `
          <input
            name="product"
            value="lương"
            hidden
          />
        <div class="my-3">
          <label for="price" class="form-label fw-bold">Tổng tiền lương</label>
          <input
            type="text"
            class="form-control"
            id="price"
            name="price"
            placeholder="20.000"
            oninput="handleQuantityInput(this)"
          />
        </div>
      `;
    }
  };
</script>
