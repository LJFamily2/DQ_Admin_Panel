<head>
  <!-- js -->
  <script src="/js/datatable.js"></script>
  <script src="https://cdn.datatables.net/rowgroup/1.5.0/js/dataTables.rowGroup.js"></script>
  <script src="/js/inputFieldRestriction.js" defer></script>
  <!-- Slim select -->
  <script src="/js/slim-select.js" defer></script>
  <link rel="stylesheet" href="https://unpkg.com/tippy.js@6/dist/tippy.css" />
  <script src="https://unpkg.com/@popperjs/core@2"></script>
  <script src="https://unpkg.com/tippy.js@6"></script>

  <style>
    /* Hide the spinners in input type number for Chrome, Safari, Edge, and Opera */
    input[type='number']::-webkit-outer-spin-button,
    input[type='number']::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    /* Hide the spinners in input type number for Firefox */
    input[type='number'] {
      -moz-appearance: textfield;
    }
    .tooltip-wrapper {
      display: inline-block; /* Ensure the wrapper does not take full width */
    }
  </style>
</head>

<div class="row m-0 m-md-2 g-3 mb-4">
  <div class="col-12 col-md-3 mt-2 d-block d-md-none">
    <div class="card" style="box-shadow: 0 1px 2px">
      <div class="card-header bg-transparent">
        <h4 class="m-0">Nhập nguyên liệu</h4>
      </div>
      <form
        action="/nhap-du-lieu/nguyen-lieu/addData/<%= area._id %>"
        method="post"
      >
        <div class="card-body">
          <%- include('../partials/notificationMessage.ejs') %>

          <div>
            <label for="supplier" class="form-label fw-bold">Nhà vườn</label>
            <select
              type="text"
              class="form-control slim-select"
              id="supplier"
              name="supplier"
              required
            >
              <% area.suppliers.forEach(supplier => { %>
              <option value="<%= supplier.name %>"><%= supplier.name %></option>
              <% }) %>
            </select>
          </div>

          <button
            type="button"
            class="btn btn-secondary btn-sm d-block d-md-none mt-2"
            data-bs-toggle="modal"
            data-bs-target="#addNewSupplier"
          >
            Tạo nhà vườn mới
          </button>

          <div class="itemLists my-3">
            <div class="itemList">
              <div class="row my-3">
                <label class="form-label fw-bold">Mủ nước</label>
                <div class="col col-md-6">
                  <label class="form-label">Số lượng</label>
                  <input
                    type="number"
                    class="form-control"
                    id="dryQuantity"
                    name="dryQuantity"
                    required
                  />
                </div>
                <div class="col col-md-6">
                  <label for="percentage" class="form-label">Hàm lượng</label>
                  <input
                    type="number"
                    class="form-control"
                    id="percentage"
                    name="percentage"
                    max="100"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="itemList">
              <div class="row my-3">
                <label class="form-label fw-bold">Mủ tạp</label>
                <div class="col-12">
                  <label for="mixedQuantity" class="form-label">Số lượng</label>
                  <input
                    type="number"
                    class="form-control"
                    id="mixedQuantity"
                    name="mixedQuantity"
                    required
                  />
                </div>
              </div>
            </div>
            <div class="itemList">
              <div class="row my-3">
                <label class="form-label fw-bold">Mủ Ké</label>
                <div class="col">
                  <label for="keQuantity" class="form-label">Số lượng</label>
                  <input
                    type="number"
                    class="form-control"
                    id="keQuantity"
                    name="keQuantity"
                    required
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent">
          <!-- Buttons -->
          <% if(limitReached){ %>
          <div
            class="tooltip-wrapper"
            data-tippy-content="Đã đạt giới hạn nhập dữ liệu ngày"
            tabindex="0"
          >
            <button type="submit" class="btn btn-primary" disabled>Tạo</button>
          </div>
          <% } else { %>
          <button type="submit" class="btn btn-primary">Tạo</button>
          <% } %>

          <button type="reset" class="btn text-dark">Làm mới</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-12 col-md-9 mt-2">
    <div class="card" style="box-shadow: 0 1px 2px">
      <div class="card-header bg-transparent">
        <%- include('../partials/dateSelection.ejs') %>
      </div>
      <div class="card-body">
        <table class="table table-striped" id="table">
          <thead>
            <tr>
              <th rowspan="2">STT</th>
              <th rowspan="2">Ngày</th>
              <th rowspan="2">Nhà vườn</th>
              <th colspan="3">Mủ quy khô</th>
              <th>Mủ tạp</th>
              <th colspan="3">Mủ ké</th>
              <th rowspan="2">Chỉnh sửa</th>
            </tr>
            <tr>
              <th>SL</th>
              <th>Hàm lượng</th>
              <th>Tổng</th>
              <th>SL</th>
              <th>SL</th>
              <th>Hàm lượng</th>
              <th>Tổng</th>
            </tr>
          </thead>

          <tbody>
            <% area.data.forEach((item, index) => { %>
            <!-- Modal for updating -->
            <div
              class="modal fade"
              id="staticBackdrop<%= item._id %>"
              data-bs-backdrop="static"
              data-bs-keyboard="false"
              tabindex="-1"
              aria-hidden="true"
            >
              <div
                class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
              >
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5">
                      Cập nhật thông tin <%= item.supplier.name %>
                    </h1>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>

                  <form
                    action="/nhap-du-lieu/nguyen-lieu/updateData/<%= item._id %>"
                    method="post"
                  >
                    <div class="card-body">
                      <%- include('../partials/notificationMessage.ejs') %>

                      <div>
                        <label for="date<%= index %>" class="form-label fw-bold"
                          >Ngày nhập</label
                        >
                        <input
                          type="date"
                          class="form-control"
                          id="date<%= index %>"
                          name="date"
                          value="<%= item.date.toISOString().slice(0,10) %>"
                          required
                        />
                      </div>

                      <div class="my-3">
                        <label
                          for="supplier<%= index %>"
                          class="form-label fw-bold"
                          >Nhà vườn</label
                        >
                        <select
                          type="text"
                          class="form-control slim-select"
                          id="supplier<%= index %>"
                          name="supplier"
                          required
                        >
                          <% area.suppliers.forEach(supplier => { %>
                          <option value="<%= supplier.name %>">
                            <%= supplier.name %>
                          </option>
                          <% }) %>
                        </select>
                      </div>

                      <div class="itemLists my-3">
                        <div class="itemList">
                          <div class="row my-3">
                            <label class="form-label fw-bold">Mủ nước</label>
                            <div class="col col-md-6">
                              <label
                                for="dryQuantity<%= index %>"
                                class="form-label"
                                >Số lượng</label
                              >
                              <input
                                type="number"
                                class="form-control"
                                id="dryQuantity<%= index %>"
                                name="dryQuantity"
                                placeholder="123.45"
                                value="<%= item.dryQuantity %>"
                                required
                              />
                            </div>
                            <div class="col col-md-6">
                              <label
                                for="percentage<%= index %>"
                                class="form-label"
                                >Hàm lượng</label
                              >
                              <input
                                type="number"
                                class="form-control"
                                id="percentage<%= index %>"
                                name="percentage"
                                placeholder="23.043"
                                max="100"
                                value="<%= item.percentage %>"
                                required
                              />
                            </div>
                          </div>
                        </div>

                        <div class="itemList">
                          <div class="row my-3">
                            <label class="form-label fw-bold">Mủ tạp</label>
                            <div class="col-12">
                              <label
                                for="mixedQuantity<%= index %>"
                                class="form-label"
                                >Số lượng</label
                              >
                              <input
                                type="number"
                                class="form-control"
                                id="mixedQuantity<%= index %>"
                                name="mixedQuantity"
                                placeholder="123.45"
                                value="<%= item.mixedQuantity %>"
                                required
                              />
                            </div>
                          </div>
                        </div>
                        <div class="itemList">
                          <div class="row my-3">
                            <label class="form-label fw-bold">Mủ Ké</label>
                            <div class="col">
                              <label
                                for="keQuantity<%= index %>"
                                class="form-label"
                                >Số lượng</label
                              >
                              <input
                                type="number"
                                class="form-control"
                                id="keQuantity<%= index %>"
                                name="keQuantity"
                                placeholder="123.45"
                                value="<%= item.keQuantity %>"
                                required
                              />
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="card-footer bg-transparent">
                      <!-- Buttons -->
                      <button type="submit" class="btn btn-primary">Lưu</button>
                      <button type="reset" class="btn text-dark">
                        Làm mới
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <!-- Delete confirming modal  -->
            <div
              class="modal fade"
              id="deleteModalToggle<%= item._id %>"
              aria-hidden="true"
              aria-labelledby="exampleModalToggleLabel"
              tabindex="-1"
            >
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                      Xóa thông tin ngày <%=
                      item.date.toLocaleDateString("vi-VN") %> của <%=
                      item.supplier.name %>
                    </h1>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <form
                    action="/nhap-du-lieu/nguyen-lieu/deleteData/<%= item._id %>"
                    method="post"
                  >
                    <div class="modal-body">
                      Bạn có muốn xóa thông tin của
                      <strong><%= item.supplier.name %></strong>
                      ? Hành động này không thể hoàn tác.
                    </div>
                    <div class="modal-footer">
                      <% if(user.role === 'Admin'){ %>
                      <button type="submit" class="btn btn-danger">
                        Xác nhận
                      </button>
                      <% } else { %>
                      <div
                        class="tooltip-wrapper"
                        data-tippy-content="Bạn không có quyền sử dụng"
                        tabindex="0"
                      >
                        <button type="button" class="btn btn-danger" disabled>
                          Xác nhận
                        </button>
                      </div>
                      <% } %>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
          </tbody>
          <tfoot>
            <th colspan="5">Tổng</th>
            <th></th>
            <th></th>
            <th colspan="2"></th>
            <th></th>
            <th></th>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-3 mt-2 d-none d-md-block">
    <div class="card" style="box-shadow: 0 1px 2px">
      <div class="card-header bg-transparent">
        <h4 class="m-0">Nhập nguyên liệu</h4>
      </div>
      <form
        action="/nhap-du-lieu/nguyen-lieu/addData/<%= area._id %>"
        method="post"
      >
        <div class="card-body">
          <%- include('../partials/notificationMessage.ejs') %>

          <div>
            <label for="supplier" class="form-label fw-bold">Nhà vườn</label>
            <select
              type="text"
              class="form-control slim-select"
              id="supplier"
              name="supplier"
              required
            >
              <% area.suppliers.forEach(supplier => { %>
              <option value="<%= supplier.name %>"><%= supplier.name %></option>
              <% }) %>
            </select>
          </div>

          <div
            class="tooltip-wrapper mt-1 d-none d-md-inline-flex"
            data-tippy-content="Tạo nhà vườn mới"
            tabindex="0"
          >
            <i
              class="ri-add-circle-line fs-5"
              data-bs-toggle="modal"
              data-bs-target="#addNewSupplier"
              style="cursor: pointer"
            ></i>
          </div>

          <div class="itemLists my-3">
            <div class="itemList">
              <div class="row my-3">
                <label class="form-label fw-bold">Mủ nước</label>
                <div class="col col-md-6">
                  <label for="dryQuantity" class="form-label">Số lượng</label>
                  <input
                    type="number"
                    class="form-control"
                    id="dryQuantity"
                    name="dryQuantity"
                    required
                  />
                </div>
                <div class="col col-md-6">
                  <label for="percentage" class="form-label">Hàm lượng</label>
                  <input
                    type="number"
                    class="form-control"
                    id="percentage"
                    name="percentage"
                    max="100"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="itemList">
              <div class="row my-3">
                <label class="form-label fw-bold">Mủ tạp</label>
                <div class="col-12">
                  <label for="mixedQuantity" class="form-label">Số lượng</label>
                  <input
                    type="number"
                    class="form-control"
                    id="mixedQuantity"
                    name="mixedQuantity"
                    required
                  />
                </div>
              </div>
            </div>
            <div class="itemList">
              <div class="row my-3">
                <label class="form-label fw-bold">Mủ Ké + Đông</label>
                <div class="col-6">
                  <div class="col">
                    <label for="keQuantity" class="form-label">Số lượng mủ ké</label>
                    <input
                      type="number"
                      class="form-control"
                      id="keQuantity"
                      name="keQuantity"
                      required
                    />
                  </div>
                  
                </div>
                <div class="col-6">
                  <div class="col">
                    <label for="kePercentage" class="form-label">Hàm lượng</label>
                    <input
                      type="number"
                      class="form-control"
                      id="kePercentage"
                      name="kePercentage"
                      required
                    />
                  </div>
                </div>
                <div class="col-6">
                  <div class="col mt-2">
                    <label for="dongQuantity" class="form-label">Số lượng mủ đông</label>
                    <input
                      type="number"
                      class="form-control"
                      id="dongQuantity"
                      name="dongQuantity"
                      required
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent">
          <!-- Buttons -->
          <% if(limitReached){ %>
          <div
            class="tooltip-wrapper"
            data-tippy-content="Đã đạt giới hạn nhập dữ liệu ngày"
            tabindex="0"
          >
            <button type="submit" class="btn btn-primary" disabled>Tạo</button>
          </div>
          <% } else { %>
          <button type="submit" class="btn btn-primary">Tạo</button>
          <% } %>

          <button type="reset" class="btn text-dark">Làm mới</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- Modal for deleting all -->
<div
  class="modal fade"
  id="deleteAll"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="deleteUsers"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteUsers">Xóa tất cả chi tiêu</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <form action="/quan-ly-chi-tieu/deleteAll" method="post">
        <div class="modal-body">
          Bạn có muốn xóa <strong class="fs-3">tất cả</strong> thông tin ? Hành
          động này không thể hoàn tác.
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Xác nhận</button>
        </div>
      </form>
    </div>
