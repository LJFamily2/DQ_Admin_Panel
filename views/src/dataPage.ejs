<head>
  <!-- js -->
  <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.html5.min.js"></script>
  <script src="https://cdn.datatables.net/rowgroup/1.5.0/js/dataTables.rowGroup.js"></script>
  <script src="/js/datatable.js"></script>
  <script src="/js/inputFieldRestriction.js" defer></script>

  <!-- Slim select -->
  <script src="/js/slim-select.js" defer></script>

  <style>
    .updateButton {
      transition: all 200ms linear;
    }
    .rotate {
      transform: rotate(180deg);
      transition: all 200ms linear;
    }
  </style>
</head>

<div class="row m-0 px-2">
  <div class="col-12 col-md-9 p-0 px-md-3" >
    <div class="col rounded-2 p-2 overflow-auto " style="box-shadow: 0 0 10px; max-height: 80dvh;">
      <table class="table table-striped table-bordered" id="products_table" >
        <thead>
          <tr>
            <% ['STT', 'Tên', 'Đơn vị', 'Chỉnh sửa'].forEach((header, index) => { %>
              <th><%= header %></th>
            <% }) %>
        </thead>
        <tbody>
          <% datas.forEach( (data,index) => { %>
          <!-- Modal for updating -->
          <div
            class="modal fade"
            id="staticBackdrop<%= index + 1%>"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
          >
            <div
              class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
            >
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="staticBackdropLabel">
                    Cập nhật thông tin cho <%= data.name %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>

                <form
                  action="/quan-ly-hang-hoa/update/<%= data._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    <div class="my-3">
                      <label for="name<%= index %>" class="form-label">Tên</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name<%= index %>"
                        name="name"
                        placeholder="Nhập tên mới"
                        value="<%= data.name %>"
                      />
                    </div>
              
                    <div class="my-3">
                      <label for="unit<%= index %>" class="form-label">Đơn vị</label>
                      <input
                        type="text"
                        class="form-control"
                        id="unit<%= index %>"
                        name="unit"
                        placeholder="Nhập đơn vị mới"
                        value="<%= data.unit %>"
                      />
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                      Lưu mới
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Delete confirming modal  -->
          <div
            class="modal fade"
            id="deleteModalToggle<%= index + 1 %>"
            aria-hidden="true"
            aria-labelledby="exampleModalToggleLabel"
            tabindex="-1"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                    Xóa <%= data.name %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form
                  action="/quan-ly-hang-hoa/delete/<%= data._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    Bạn có muốn xóa
                    <strong><%= data.name %></strong> ? Hành động này không
                    thể hoàn tác.
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">
                      Xác nhận
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div
class="col-12 col-md-3 rounded-2 my-5 m-md-0 py-3 "
    style="
      box-shadow: 0 0 10px;
      background: var(--background_color);
      max-height: 80dvh;
      overflow-y: auto;
    "
  >
    <%- include('../partials/notificationMessage.ejs') %>
    <h4>Thêm dữ liệu</h4>
    <form
      action="/quan-ly-du-lieu/createData"
      method="post"
    >
      <div class="my-3">
        <label for="date" class="form-label">Ngày nhập</label>
        <input type="date" class="form-control" id="date" name="date" />
      </div>

      <hr />

      <div class="productLists my-3">
        <div class="productList">
          <div class="row my-3">
            <label class="form-label">Mủ Quy Khô</label>
            <input
              type="text"
              class="form-control"
              name="dryRubber"
              value="Mủ quy khô"
              hidden
            />
            <div class="col col-md-6">
              <label for="dryQuantity" class="form-label">Số lượng</label>
              <input
                type="text"
                class="form-control"
                id="dryQuantity"
                name="dryQuantity"
                placeholder="1234,34"
                oninput="handleQuantityInput(this)"
              />
            </div>
            <div class="col col-md-6">
              <label for="dryPercentage" class="form-label">Hàm lượng</label>
              <input
                type="text"
                class="form-control"
                id="dryPercentage"
                name="dryPercentage"
                placeholder="23,04"
                oninput="handlePercentageInput(this)"
              />
            </div>
          </div>
        </div>

        <hr />

        <div class="productList">
          <div class="row my-3">
            <label class="form-label">Mủ tạp</label>
            <input
              type="text"
              class="form-control"
              name="mixedRubber"
              value="Mủ tạp"
              hidden
            />
            <div class="col-12">
              <label for="mixedQuantity" class="form-label">Số lượng</label>
              <input
                type="text"
                class="form-control"
                id="mixedQuantity"
                name="mixedQuantity"
                placeholder="1234,34"
                min="0"
                oninput="handleQuantityInput(this)"
              />
            </div>
          </div>
          <hr />
        </div>
        <div class="productList">
          <div class="row my-3">
            <label class="form-label">Bán ngoài</label>
            <div class="col-6">
              <label for="sellQuantity" class="form-label">Số lượng</label>
              <input
                type="text"
                class="form-control"
                id="sellQuantity"
                name="sellQuantity"
                placeholder="1234,34"
                min="0"
                oninput="handleQuantityInput(this)"
              />
            </div>
            <div class="col col-md-6">
              <label for="sellPercentage" class="form-label">Hàm lượng</label>
              <input
                type="text"
                class="form-control"
                id="sellPercentage"
                name="sellPercentage"
                placeholder="23,04"
                oninput="handlePercentageInput(this)"
              />
            </div>
          </div>
          <hr />
        </div>
      </div>

      <div class="my-3">
        <label for="note" class="form-label">Ghi chú</label>
        <textarea
          type="text"
          class="form-control"
          rows="3"
          id="note"
          name="note"
        ></textarea>
      </div>

      <!-- Buttons -->
      <button type="submit" class="btn btn-primary">Thêm</button>
      <button type="reset" class="btn btn-secondary">Làm mới</button>
    </form>
  </div>
</div>

<script>

</script>
