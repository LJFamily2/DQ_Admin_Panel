<div class="row m-0 px-2">
  <div class="col-12 col-md-9 p-0 px-md-3">
    <div
      class="col rounded-2 p-2 overflow-auto"
      style="box-shadow: 0 0 10px"
    >
    <div class="row m-0"><%- include('../partials/dateSelection.ejs') %></div>

      <table class="table table-striped table-bordered" id="products_table">
        <thead>
          <tr>
            <th>STT</th>
            <th>Ngày chạy lò</th>
            <th>Quy khô sử dụng</th>
            <th>Thành phẩm</th>
            <th>Ghi chú</th>
            <th>Chỉnh sửa</th>
          </tr>
        </thead>

        <tbody>
          <% products.forEach( (product,index) => { %>
          <!-- Modal for updating -->
          <div
            class="modal fade"
            id="staticBackdrop<%= index + 1%>"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
          >
            <div
              class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
            >
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="staticBackdropLabel">
                    Cập nhật thông tin <%= product.date.toLocaleDateString() %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>

                <form
                  action="/quan-ly-hang-hoa/update/<%= product._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    <div class="my-3">
                      <label for="date" class="form-label">Ngày chạy lò</label>
                      <input
                        type="date"
                        class="form-control"
                        id="date"
                        name="date"
                        placeholder="Nhập tên"
                        value="<%= product.date.toISOString().slice(0,10)  %>"
                      />
                    </div>

                    <div class="my-3">
                      <label for="dryRubberUsed" class="form-label"
                        >Quy khô sử dụng</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="dryRubberUsed"
                        name="dryRubberUsed"
                        placeholder="123,45"
                        value="<%= product.dryRubberUsed %>"
                        oninput="handleQuantityInput(this)"
                      />
                    </div>

                    <div class="my-3">
                      <label for="quantity" class="form-label"
                        >Thành phẩm</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="quantity"
                        name="quantity"
                        placeholder="123,45"
                        oninput="handleQuantityInput(this)"
                        value="<%= product.quantity %>"
                      />
                    </div>

                    <div class="my-3">
                      <label for="notes" class="form-label">Ghi chú</label>
                      <textarea
                        type="text"
                        class="form-control"
                        rows="3"
                        id="notes"
                        name="notes"
                      ><%= product.notes %></textarea>
                    </div>

                  </div>
                  <div class="modal-footer">
                    <!-- Buttons -->
                    <button type="submit" class="btn btn-primary">
                      Lưu
                    </button>
                    <button type="reset" class="btn btn-secondary">
                      Làm mới
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Delete confirming modal  -->
          <div
            class="modal fade"
            id="deleteModalToggle<%= index + 1 %>"
            aria-hidden="true"
            aria-labelledby="exampleModalToggleLabel"
            tabindex="-1"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                    Xóa thông tin ngày <%= product.date.toLocaleDateString("vi-VN") %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form
                  action="/quan-ly-hang-hoa/delete/<%= product._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    Bạn có muốn xóa thông tin ngày
                    <strong><%= product.date.toLocaleDateString("vi-VN") %></strong> ? Hành động này không
                    thể hoàn tác.
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">
                      Xác nhận
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div
    class="col-12 col-md-3 rounded-2 my-5 m-md-0 py-3"
    style="
      box-shadow: 0 0 10px;
    "
  >
    <%- include('../partials/notificationMessage.ejs') %>
    <h4>Thêm hàng hóa</h4>
    <form action="/quan-ly-hang-hoa/addProduct" method="post">
      <div class="my-3">
        <label for="date" class="form-label">Ngày chạy lò</label>
        <input
          type="date"
          class="form-control"
          id="date"
          name="date"
          placeholder="Nhập tên"
          required
        />
      </div>

      <div class="my-3">
        <label for="dryRubberUsed" class="form-label">Quy khô sử dụng</label>
        <input
          type="text"
          class="form-control"
          id="dryRubberUsed"
          name="dryRubberUsed"
          placeholder="123,45"
          oninput="handleQuantityInput(this)"
        />
      </div>

      <div class="my-3">
        <label for="quantity" class="form-label">Thành phẩm</label>
        <input
          type="text"
          class="form-control"
          id="quantity"
          name="quantity"
          placeholder="123,45"
          oninput="handleQuantityInput(this)"
        />
      </div>

      <div class="my-3">
        <label for="notes" class="form-label">Ghi chú</label>
        <textarea
          type="text"
          class="form-control"
          rows="3"
          id="notes"
          name="notes"
        ></textarea>
      </div>

      <!-- Buttons -->
      <button type="submit" class="btn btn-success">Thêm</button>
      <button type="reset" class="btn btn-secondary">Làm mới</button>
    </form>
  </div>
</div>

<!-- Modal for deleting all products -->
<div
  class="modal fade"
  id="deleteAll-admin-user"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="deleteUsers"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteUsers">Xóa tất cả tài khoản</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <form action="/quan-ly-hang-hoa/deleteAll" method="post">
        <div class="modal-body">
          Bạn có muốn xóa <strong>tất cả</strong> thông tin người quản lý ? Hành
          động này không thể hoàn tác.
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Xác nhận</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  const productColumns = [
    { data: 'no', orderable: false },
    { data: 'date' },
    { data: 'dryRubberUsed', orderable: false },
    { data: 'quantity', orderable: false },
    { data: 'notes', orderable: false },
    { data: 'id', orderable: false },
  ];

  initializeDataTable(
    '#products_table',
    '/quan-ly-hang-hoa/getProducts',
    '#staticBackdrop',
    '#deleteModalToggle',
    productColumns,
    false,
    '#filterButton',
    '#startDate',
    '#endDate',
    '#clearFilterButton',
  );
</script>
