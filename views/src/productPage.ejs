<head>
  <!-- js -->
  <script src="/js/datatable.js"></script>
  <script src="/js/inputFieldRestriction.js" defer></script>
  <!-- Slim select -->
  <script src="/js/slim-select.js" defer></script>
</head>

<%- include('../partials/totalValue') %>

<% if(user.role === 'Admin'){ %>
<button type="button" class="btn btn-danger mx-2 mx-md-3 mt-2" data-bs-toggle="modal" data-bs-target="#deleteAll" style="width: max-content">
  Xóa tất cả thông tin
</button>
<% } %>

<div class="row m-0 m-md-2 g-3 mb-4">
  <div class="col-12 col-md-9 mt-2">
    <div class="card" style="box-shadow: 0 1px 2px">
      <div class="card-header bg-transparent">
        <%- include('../partials/dateSelection.ejs') %>
      </div>
      <div class="card-body">
        <table class="table table-striped" id="products_table">
          <thead>
            <tr>
              <th>STT</th>
              <th>Ngày chạy lò</th>
              <th>Quy khô </th>
              <th>Thành phẩm</th>
              <th>Ghi chú</th>
              <th>Chỉnh sửa</th>
            </tr>
          </thead>

          <tbody>
            <% products.forEach( (product,index) => { %>
            <!-- Modal for updating -->
            <div class="modal fade" id="staticBackdrop<%= product._id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">
                      Cập nhật thông tin <%= product.date.toLocaleDateString()
                      %>
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>

                  <form action="/quan-ly-hang-hoa/<%= product._id %>?_method=PUT" method="post">
                    <div class="modal-body">
                      <div>
                        <label for="date" class="form-label fw-bold">Ngày chạy lò</label>
                        <input type="date" class="form-control" id="date" name="date" placeholder="Nhập tên" value="<%= product.date.toISOString().slice(0,10)  %>" required />
                      </div>

                      <div class="my-3">
                        <div class="row">
                          <label for="dryRubberUsed" class="form-label fw-bold">Nguyên liệu</label>
                          <div class="col-6">
                            <label for="dryRubberUsed" class="form-label ">Số lượng</label>
                            <input type="text" class="form-control" id="dryRubberUsed" name="dryRubberUsed" placeholder="1,234.5" oninput="handleQuantityInput(this)" inputmode="numeric" value="<%= product.dryRubberUsed.toLocaleString('vi-VN') %>" />
                          </div>
                          <div class="col-6">
                            <label for="dryPercentage" class="form-label ">Hàm lượng</label>
                            <input type="text" class="form-control" id="dryPercentage" name="dryPercentage" placeholder="23,04" oninput="handlePercentageInput(this)" inputmode="numeric" value="<%= product.dryPercentage.toLocaleString('vi-VN') %>" />
                          </div>
                        </div>
                      </div>

                      <div class="my-3">
                        <label for="quantity" class="form-label fw-bold">Thành phẩm</label>
                        <input type="text" class="form-control" id="quantity" name="quantity" placeholder="1,234.5" oninput="handleQuantityInput(this)" inputmode="numeric" value="<%= product.quantity.toLocaleString('vi-VN') %>" />
                      </div>

                      <div class="my-3">
                        <label for="notes" class="form-label fw-bold">Ghi chú</label>
                        <textarea type="text" class="form-control" rows="3" id="notes" name="notes"><%= product.notes %></textarea>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <!-- Buttons -->
                      <button type="submit" class="btn btn-primary">Lưu</button>
                      <button type="reset" class="btn text-dark">
                        Đặt lại
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <!-- Modal for raw material -->
            <div class="modal fade" id="rawMaterial<%= product._id %>">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5">Nguyên Liệu</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="my-3">
                      <div class="row">
                        <div class="col-6">
                          <label class="form-label fw-bold">Mủ nước</label>
                          <input type="text" class="form-control" value="<%= product.dryRubberUsed.toLocaleString('vi-VN') %>" disabled />
                        </div>
                        <div class="col-6">
                          <label for="dryPercentage" class="form-label fw-bold">Hàm lượng</label>
                          <input type="text" class="form-control" value="<%= product.dryPercentage.toLocaleString('vi-VN') %>" disabled />
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Delete confirming modal  -->
            <div class="modal fade" id="deleteModalToggle<%= product._id %>" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                      Xóa thông tin ngày <%=
                      product.date.toLocaleDateString("vi-VN") %>
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <form action="/quan-ly-hang-hoa/<%= product._id %>?_method=DELETE" method="post">
                    <div class="modal-body">
                      Bạn có muốn xóa thông tin ngày
                      <strong><%= product.date.toLocaleDateString("vi-VN") %></strong>
                      ? Hành động này không thể hoàn tác.
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-danger">
                        Xác nhận
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3">Tổng</th>
              <th></th>
              <th colspan="2"></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-3 mt-2">
    <div class="card" style="box-shadow: 0 1px 2px">
      <div class="card-header bg-transparent">
        <h4 class="m-0">Tạo hàng hóa</h4>
      </div>
      <form action="/quan-ly-hang-hoa" method="post">
        <div class="card-body">
          <%- include('../partials/notificationMessage.ejs') %>
          <div>
            <label for="date" class="form-label fw-bold">Ngày chạy lò</label>
            <input type="date" class="form-control" id="date" name="date" required autofocus />
          </div>

          <div class="my-3">
            <div class="row">
              <label for="dryRubberUsed" class="form-label fw-bold">Nguyên liệu</label>
              <div class="col-6">
                <label for="dryRubberUsed" class="form-label">Số lượng</label>
                <input type="text" class="form-control" id="dryRubberUsed" name="dryRubberUsed" placeholder="1,234.5" oninput="handleQuantityInput(this)" inputmode="numeric" />
              </div>
              <div class="col-6">
                <label for="dryPercentage" class="form-label">Hàm lượng</label>
                <input type="text" class="form-control" id="dryPercentage" name="dryPercentage" placeholder="23,04" oninput="handlePercentageInput(this)" inputmode="numeric" />
              </div>
            </div>
          </div>

          <div class="my-3">
            <label for="quantity" class="form-label fw-bold">Thành phẩm</label>
            <input type="text" class="form-control" id="quantity" name="quantity" placeholder="1,234.5" oninput="handleQuantityInput(this)" inputmode="numeric" />
          </div>

          <div class="my-3">
            <label for="notes" class="form-label fw-bold">Ghi chú</label>
            <textarea type="text" class="form-control" rows="3" id="notes" name="notes"></textarea>
          </div>
        </div>
        <div class="card-footer bg-transparent">
          <!-- Buttons -->
          <button type="submit" class="btn btn-primary">Tạo</button>
          <button type="reset" class="btn text-dark">Làm mới</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal for deleting all products -->
<div class="modal fade" id="deleteAll" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteUsers" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteUsers">Xóa tất cả hàng hóa</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form action="/quan-ly-hang-hoa/deleteAll?_method=DELETE" method="post">
        <div class="modal-body">
          Bạn có muốn xóa <strong class="fs-3">tất cả</strong> thông tin ? Hành
          động này không thể hoàn tác.
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Xác nhận</button>
        </div>
      </form>
    </div>
  </div>
</div>



<script>
  const productColumns = [{
      data: 'no',
      orderable: false,
      width: '10%',
      visible: false
    },
    {
      data: 'date',
      width: '15%'
    },
    {
      data: 'dryRubberUsed',
      orderable: false,
      width: '20%',
      render: function(data) {
        console.log(data)
        return `<a class="link-opacity-50-hover" data-bs-toggle="modal" data-bs-target="#rawMaterial${data.id}" style="cursor: pointer">${data.value}</a>`;
      }
    },
    {
      data: 'quantity',
      orderable: false,
      width: '20%'
    },
    {
      data: 'notes',
      orderable: false,
      width: '20%'
    },
    {
      data: 'id',
      orderable: false,
      width: '15%'
    },
  ];

  initializeDataTable(
    '#products_table',
    '/quan-ly-hang-hoa/getProducts',
    '#staticBackdrop',
    '#deleteModalToggle',
    productColumns,
    false,
    '#filterButton',
    '#startDate',
    '#endDate',
    '#clearFilterButton',
    true,
  );
</script>