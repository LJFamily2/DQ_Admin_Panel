<head>
  <!-- js -->
  <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.html5.min.js"></script>
  <script src="/js/datatable.js"></script>
  <script src="/js/inputFieldRestriction.js" defer></script>
  <script src="/js/multipleFieldsWithText.js" defer></script>

  <!-- Slim select -->
  <script src="/js/slim-select.js" defer></script>

  <style>
    .updateButton {
      transition: all 200ms linear;
    }
    .rotate {
      transform: rotate(180deg);
      transition: all 200ms linear;
    }
  </style>
</head>

<div class="row m-0 px-2">
  <div class="col-12 col-md-9 p-0 px-md-3">
    <div
      class="col rounded-2 p-2 overflow-auto"
      style="box-shadow: 0 0 10px; max-height: 80dvh"
    >
      <div class="row m-0"><%- include('../partials/dateSelection.ejs') %></div>
      <table class="table table-striped table-bordered" id="table">
        <thead>
          <tr>
            <th>STT</th>
            <th>Ngày</th>
            <th>Mã hợp đồng</th>
            <th>Hàng hóa</th>
            <th>Ghi chú</th>
            <th>Tổng</th>
            <th>Tình trạng</th>
            <th>Chỉnh sửa</th>
          </tr>
        </thead>

        <tbody>
          <% sales.forEach( (sale,index) => { %>
          <!-- Modal for updating -->
          <div
            class="modal fade"
            id="staticBackdrop<%= index + 1%>"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
          >
            <div
              class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
            >
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="staticBackdropLabel">
                    Cập nhật thông tin cho <%= sale.date.toLocaleDateString() %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>

                <form
                  action="/quan-ly-du-lieu/update/<%= sale._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    <div class="my-3">
                      <label for="date<%= index %>" class="form-label"
                        >Ngày nhập</label
                      >
                      <input
                        type="date"
                        class="form-control"
                        id="date<%= index %>"
                        name="date"
                        required
                      />
                    </div>

                    <div class="my-3">
                      <label for="code<%= index %>" class="form-label"
                        >Mã hợp đồng</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="code<%= index %>"
                        name="code"
                        placeholder="NPUE-3984"
                        required
                      />
                    </div>

                    <hr />

                    <div class="productLists<%= index %>  my-3" >
                      <div class="productList<%= index %>">
                        <div class="row my-3">
                          <div class="row m-0 p-0">
                            <div class="col">
                              <label for="name<%= index %>" class="form-label"
                                >Tên hàng hóa</label
                              >
                              <input
                                type="text"
                                name="name"
                                id="name<%= index %>"
                                class="form-control"
                                placeholder="Mủ cao su"
                                required
                              />
                            </div>
                          </div>
                          <div class="row my-3 m-0 p-0">
                            <div class="col col-md-6">
                              <label
                                for="quantity<%= index %>"
                                class="form-label"
                                >Số lượng</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                id="quantity<%= index %>"
                                name="quantity"
                                placeholder="1234,34"
                                oninput="handleQuantityInput(this)"
                              />
                            </div>
                            <div class="col col-md-6">
                              <label for="price<%= index %>" class="form-label"
                                >Đơn giá</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                id="price<%= index %>"
                                name="price"
                                placeholder="20000"
                                oninput="handleQuantityInput(this)"
                              />
                            </div>
                          </div>
                        </div>
                      </div>

                      <hr />
                    </div>

                    <div class="btnController my-3">
                      <button
                        type="button"
                        class="btn btn-success"
                        onclick="addInputField('form .productLists<%= index %>', '.productList<%= index %>')"
                      >
                        Thêm dữ liệu
                      </button>
                      <button
                        type="button"
                        class="btn btn-danger mx-2"
                        onclick="removeInputField('form .productLists<%= index %>', '.productList<%= index %>')"
                      >
                        Xóa
                      </button>
                    </div>

                    <div class="my-3">
                      <label for="notes<%= index %>" class="form-label">Ghi chú</label>
                      <textarea
                        type="text"
                        class="form-control"
                        rows="3"
                        id="notes<%= index %>"
                        name="notes"
                      ></textarea>
                    </div>
                    <div class="modal-footer">
                      <!-- Buttons -->
                      <button type="submit" class="btn btn-success">Lưu</button>
                      <button
                        type="reset"
                        class="btn btn-secondary"
                        onclick="resetInput()"
                      >
                        Reset
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Delete confirming modal  -->
          <div
            class="modal fade"
            id="deleteModalToggle<%= index + 1 %>"
            aria-hidden="true"
            aria-labelledby="exampleModalToggleLabel"
            tabindex="-1"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                    Xóa dữ liệu <%= sale.date.toLocaleDateString() %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form
                  action="/quan-ly-du-lieu/delete/<%= sale._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    Bạn có muốn xóa
                    <strong><%= sale.date.toLocaleDateString() %></strong> ?
                    Hành động này không thể hoàn tác.
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">
                      Xác nhận
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div
    class="col-12 col-md-3 rounded-2 my-5 m-md-0 py-3"
    style="
      box-shadow: 0 0 10px;
      background: var(--background_color);
      max-height: 80dvh;
      overflow-y: auto;
    "
  >
    <%- include('../partials/notificationMessage.ejs') %>
    <h4>Thêm hợp đồng</h4>
    <form action="/quan-ly-hop-dong/createData" method="post">
      <div class="my-3">
        <label for="date" class="form-label">Ngày nhập</label>
        <input
          type="date"
          class="form-control"
          id="date"
          name="date"
          required
        />
      </div>

      <div class="my-3">
        <label for="code" class="form-label">Mã hợp đồng</label>
        <input
          type="text"
          class="form-control"
          id="code"
          name="code"
          placeholder="NPUE-3984"
          required
        />
      </div>

      <hr />

      <div class="productLists my-3">
        <div class="productList">
          <div class="row my-3">
            <div class="row m-0 p-0">
              <div class="col">
                <label for="name" class="form-label">Tên hàng hóa</label>
                <input
                  type="text"
                  name="name"
                  id="name"
                  class="form-control"
                  placeholder="Mủ cao su"
                  required
                />
              </div>
            </div>
            <div class="row my-3 m-0 p-0">
              <div class="col col-md-6">
                <label for="quantity" class="form-label">Số lượng</label>
                <input
                  type="text"
                  class="form-control"
                  id="quantity"
                  name="quantity"
                  placeholder="1234,34"
                  oninput="handleQuantityInput(this)"
                />
              </div>
              <div class="col col-md-6">
                <label for="price" class="form-label">Đơn giá</label>
                <input
                  type="text"
                  class="form-control"
                  id="price"
                  name="price"
                  placeholder="20000"
                  oninput="handleQuantityInput(this)"
                />
              </div>
            </div>
          </div>
        </div>

        <hr />
      </div>

      <div class="btnController my-3">
        <button
          type="button"
          class="btn btn-success"
          onclick="addInputField('form .productLists', '.productList')"
        >
          Thêm dữ liệu
        </button>
        <button
          type="button"
          class="btn btn-danger mx-2"
          onclick="removeInputField('form .productLists', '.productList')"
        >
          Xóa
        </button>
      </div>

      <div class="my-3">
        <label for="notes" class="form-label">Ghi chú</label>
        <textarea
          type="text"
          class="form-control"
          rows="3"
          id="notes"
          name="notes"
        ></textarea>
      </div>

      <!-- Buttons -->
      <button type="submit" class="btn btn-primary">Thêm</button>
      <button type="reset" class="btn btn-secondary">Làm mới</button>
    </form>
  </div>
</div>

<script>
  let columns = [
    { data: 'no', orderable: false },
    { data: 'date' },
    { data: 'code', orderable: false },
    { data: 'products', orderable: false },
    { data: 'notes', orderable: false },
    { data: 'total', orderable: false },
    { data: 'status' },
    { data: 'id', orderable: false },
  ];

  initializeDataTable(
    '#table',
    '/quan-ly-hop-dong/getDatas',
    '#staticBackdrop',
    '#deleteModalToggle',
    columns,
    false,
    '#filterButton',
    '#startDate',
    '#endDate',
    '#clearFilterButton',
    false,
    false,
    false,
    false,
    false,
    false,
    true,
  );


</script>
