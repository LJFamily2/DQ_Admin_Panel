<head>
  <!-- js -->
  <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.html5.min.js"></script>
  <script src="/js/datatable.js"></script>
  <script src="/js/inputFieldRestriction.js" defer></script>

  <!-- Slim select -->
  <script src="/js/slim-select.js" defer></script>

  <style>
    .updateButton {
      transition: all 200ms linear;
    }
    .rotate {
      transform: rotate(180deg);
      transition: all 200ms linear;
    }
  </style>
</head>

<div class="row m-0 px-2">
  <div class="col-12 col-md-9 p-0 px-md-3">
    <div
      class="col rounded-2 p-2 overflow-auto"
      style="box-shadow: 0 0 10px; max-height: 80dvh"
    >
      <div class="row m-0"><%- include('../partials/dateSelection.ejs') %></div>
      <table class="table table-striped table-bordered" id="table">
        <thead>
          <tr>
            <th>STT</th>
            <th>Ngày</th>
            <th>Mã hợp đồng</th>
            <th>Hàng hóa</th>
            <th>Tình trạng</th>
            <th>Ghi chú</th>
            <th>Chỉnh sửa</th>
          </tr>
        </thead>

        <tbody>
          <% sales.forEach( (sale,index) => { %>
          <!-- Modal for updating -->
          <div
            class="modal fade"
            id="staticBackdrop<%= index + 1%>"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
          >
            <div
              class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
            >
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="staticBackdropLabel">
                    Cập nhật thông tin cho <%= sale.date.toLocaleDateString() %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>

                <form
                  action="/quan-ly-du-lieu/update/<%= sale._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    <div class="my-3">
                      <label for="date<%= index %>" class="form-label"
                        >Ngày nhập</label
                      >
                      <input
                        type="date"
                        class="form-control"
                        id="date<%= index %>"
                        name="date"
                        value="<%= sale.date.toISOString().slice(0,10) %>"
                        onchange="newInput(this)"
                      />
                    </div>

                    <hr />

                    <div class="productLists my-3">
                      <div class="productList">
                        <div class="row my-3">
                          <label class="form-label">Mủ Quy Khô</label>
                          <div class="col col-md-6">
                            <label for="dryQuantity" class="form-label"
                              >Số lượng</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="dryQuantity"
                              name="dryQuantity"
                              placeholder="1234,34"
                              oninput="handleQuantityInput(this)"
                              onchange="newInput(this)"
                              value="<%= sale.products.dryQuantity %>"
                            />
                          </div>
                          <div class="col col-md-6">
                            <label for="dryPercentage" class="form-label"
                              >Hàm lượng</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="dryPercentage"
                              name="dryPercentage"
                              placeholder="23,04"
                              oninput="handlePercentageInput(this)"
                              onchange="newInput(this)"
                              value="<%= sale.products.dryPercentage %>"
                            />
                          </div>
                        </div>
                      </div>

                      <hr />

                      <div class="productList">
                        <div class="row my-3">
                          <label class="form-label">Mủ tạp</label>
                          <div class="col-12">
                            <label for="mixedQuantity" class="form-label"
                              >Số lượng</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="mixedQuantity"
                              name="mixedQuantity"
                              placeholder="1234,34"
                              min="0"
                              oninput="handleQuantityInput(this)"
                              onchange="newInput(this)"
                              value="<%= sale.products.mixedQuantity %>"
                            />
                          </div>
                        </div>
                        <hr />
                      </div>
                    </div>

                    <div class="my-3">
                      <label for="note" class="form-label">Ghi chú</label>
                      <textarea
                        type="text"
                        class="form-control"
                        rows="3"
                        id="note"
                        name="notes"
                        onchange="newInput(this)"
                      >
<%= sale.notes %></textarea
                      >
                    </div>
                  </div>
                  <div class="modal-footer">
                    <!-- Buttons -->
                    <button type="submit" class="btn btn-success">Lưu</button>
                    <button
                      type="reset"
                      class="btn btn-secondary"
                      onclick="resetInput()"
                    >
                      Reset
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Delete confirming modal  -->
          <div
            class="modal fade"
            id="deleteModalToggle<%= index + 1 %>"
            aria-hidden="true"
            aria-labelledby="exampleModalToggleLabel"
            tabindex="-1"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                    Xóa dữ liệu <%= sale.date.toLocaleDateString() %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form
                  action="/quan-ly-du-lieu/delete/<%= sale._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    Bạn có muốn xóa
                    <strong><%= sale.date.toLocaleDateString() %></strong> ?
                    Hành động này không thể hoàn tác.
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">
                      Xác nhận
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div
    class="col-12 col-md-3 rounded-2 my-5 m-md-0 py-3"
    style="
      box-shadow: 0 0 10px;
      background: var(--background_color);
      max-height: 80dvh;
      overflow-y: auto;
    "
  >
    <%- include('../partials/notificationMessage.ejs') %>
    <h4>Thêm hợp đồng</h4>
    <form action="/quan-ly-hop-dong/createData" method="post">
      <div class="my-3">
        <label for="date" class="form-label">Ngày nhập</label>
        <input type="date" class="form-control" id="date" name="date" />
      </div>

      <hr />

      <div class="productLists my-3">
        <div class="productList">
          <div class="row my-3 ">
            <div class="row m-0 p-0">
              <div class="col">
                <label for="name[]" class="form-label">Tên hàng hóa</label>
                <input
                  type="text"
                  name="name[]"
                  id="name[]"
                  class="form-control"
                  placeholder="Mủ cao su"
                />
              </div>
            </div>
            <div class="row my-3 m-0 p-0">
              <div class="col col-md-6">
                <label for="quantity[]" class="form-label">Số lượng</label>
                <input
                  type="text"
                  class="form-control"
                  id="quantity[]"
                  name="quantity[]"
                  placeholder="1234,34"
                  oninput="handleQuantityInput(this)"
                />
              </div>
              <div class="col col-md-6">
                <label for="price[]" class="form-label">Đơn giá</label>
                <input
                  type="text"
                  class="form-control"
                  id="price[]"
                  name="price[]"
                  placeholder="20000"
                  oninput="handleQuantityInput(this)"
                />
              </div>
            </div>
          </div>
        </div>

        <hr />
      </div>

      <div class="btnController my-3">
        <button
          type="button"
          class="btn btn-success"
          onclick="addInputField('form .productLists')"
        >
          Thêm dữ liệu
        </button>
        <button
          type="button"
          class="btn btn-danger mx-2"
          onclick="removeInputField('form .productLists')"
        >
          Xóa
        </button>
      </div>

      <!-- Buttons -->
      <button type="submit" class="btn btn-primary">Thêm</button>
      <button type="reset" class="btn btn-secondary">Làm mới</button>
    </form>
  </div>
</div>

<script>
  let columns = [
    { data: 'no', orderable: false },
    { data: 'date' },
    { data: 'dryQuantity', orderable: false },
    { data: 'dryPercentage', orderable: false },
    { data: 'dryTotal', orderable: false },
    { data: 'mixedQuantity', orderable: false },
    { data: 'notes', orderable: false },
    { data: 'id', orderable: false },
  ];

  // initializeDataTable(
  //   '#table',
  //   '/quan-ly-du-lieu/getDatas',
  //   '#staticBackdrop',
  //   '#deleteModalToggle',
  //   columns,
  //   false,
  //   '#filterButton',
  //   '#startDate',
  //   '#endDate',
  //   '#clearFilterButton',
  //   false,
  //   false,
  //   false,
  //   false,
  //   false,
  //   false,
  //   true
  // );

  // Toggle buttons
  const deleteButton = document.querySelector('.btnController .btn-danger');
  function addInputField(selector) {
    // Get the productLists div
    const productLists = document.querySelector(selector);

    // Get the first .productList div within productLists
    const firstProductList = productLists.querySelector('.productList');

    // Clone the first .productList div
    const clonedProductList = firstProductList.cloneNode(true);

    // Append the cloned div to the productLists div
    productLists.appendChild(clonedProductList);

    // If there is more than one .productList div, show the delete button
    if (productLists.querySelectorAll('.productList').length > 1) {
      deleteButton.style.display = 'inline';
    }
  }

  function removeInputField(selector) {
    // Get the productLists div
    const productLists = document.querySelector(selector);

    // Get all .row divs
    const rows = productLists.querySelectorAll('.productList');

    // Get the last .row div
    const lastRow = rows[rows.length - 1];

    // Remove the last .row div
    if (lastRow) {
      lastRow.remove();
    } else {
      console.log('No .row div to remove in ' + selector);
    }

    // If there is only one .row div, hide the delete button
    if (rows.length <= 2) {
      deleteButton.style.display = 'none';
    }
  }
</script>
