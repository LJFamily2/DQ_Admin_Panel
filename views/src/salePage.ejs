<head>
  <!-- js -->
  <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.html5.min.js"></script>
  <script src="/js/datatable.js"></script>
  <script src="/js/inputFieldRestriction.js" defer></script>
  <script src="/js/multipleFieldsWithText.js" defer></script>

  <!-- Css -->
  <style>
    .updateButton {
      transition: all 200ms linear;
    }
    .rotate {
      transform: rotate(180deg);
      transition: all 200ms linear;
    }
  </style>
</head>
<%- include('../partials/totalValue.ejs') %>

<div class="row m-0 px-2">
  <div class="col-12 col-md-9 p-0 px-md-3">
    <div
      class="col rounded-2 p-2 overflow-auto"
      style="box-shadow: 0 0 10px "
    >
      <div class="row m-0"><%- include('../partials/dateSelection.ejs') %></div>
      <table class="table table-striped table-bordered" id="table">
        <thead>
          <tr>
            <th>STT</th>
            <th>Ngày</th>
            <th>Mã hợp đồng</th>
            <th>Hàng hóa</th>
            <th>Ghi chú</th>
            <th>Tổng</th>
            <th>Tình trạng</th>
            <th>Chỉnh sửa</th>
          </tr>
        </thead>

        <tbody>
          <% sales.forEach( (sale,index) => { %>

          <!-- Delete confirming modal  -->
          <div
            class="modal fade"
            id="deleteModalToggle<%= index + 1 %>"
            aria-hidden="true"
            aria-labelledby="exampleModalToggleLabel"
            tabindex="-1"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                    Xóa dữ liệu <%= sale.date.toLocaleDateString() %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form
                  action="/quan-ly-hop-dong/delete/<%= sale._id %>"
                  method="post"
                >
                  <div class="modal-body">
                    Bạn có muốn xóa hợp đồng mã
                    <strong><%= sale.code %></strong> ?
                    Hành động này không thể hoàn tác.
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">
                      Xác nhận
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div
    class="col-12 col-md-3 rounded-2 my-5 m-md-0 py-3"
    style="
      box-shadow: 0 0 10px;
    "
  >
    <%- include('../partials/notificationMessage.ejs') %>
    <h4>Thêm hợp đồng</h4>
    <form action="/quan-ly-hop-dong/createData" method="post">
      <div class="my-3">
        <label for="date" class="form-label">Ngày nhập</label>
        <input
          type="date"
          class="form-control"
          id="date"
          name="date"
          required
        />
      </div>

      <div class="my-3">
        <label for="code" class="form-label">Mã hợp đồng</label>
        <input
          type="text"
          class="form-control"
          id="code"
          name="code"
          placeholder="NPUE-3984"
          required
        />
      </div>

      <hr />

      <div class="productLists my-3">
        <div class="productList">
          <div class="row my-3">
            <div class="row m-0 p-0">
              <div class="col">
                <label for="name" class="form-label fw-bold w-100 d-flex justify-content-between"><%= index + 1 %>. Tên hàng hóa <span><i class="ri-close-line" style="cursor: pointer;" onclick="removeProduct(<%= index + 1 %>, this)"></i></span></label>
                <select class="form-control" name="name" id="name">
                  <option value="product" selected>Thành phẩm</option>
                  <option value="mixedQuantity" >Mủ tạp</option>
                  <option value="dryRubber" >Quy khô</option>
                </select>
              </div>
            </div>
            <div class="row my-3 m-0 p-0">
              <div class="col col-md-6">
                <label for="quantity" class="form-label">Số lượng</label>
                <input
                  type="text"
                  class="form-control"
                  id="quantity"
                  name="quantity"
                  placeholder="1234,34"
                  oninput="handleQuantityInput(this)"
                />
              </div>
              <div class="col col-md-6">
                <label for="price" class="form-label">Đơn giá</label>
                <input
                  type="text"
                  class="form-control"
                  id="price"
                  name="price"
                  placeholder="20000"
                  oninput="handleQuantityInput(this)"
                />
              </div>
            </div>
          </div>
        </div>

        <hr />
      </div>

      <div class="btnController my-3">
        <button
          type="button"
          class="btn btn-info text-light"
          onclick="addInputField('form .productLists', '.productList')"
        >
          +
        </button>
      </div>

      <div class="my-3">
        <label for="notes" class="form-label">Ghi chú</label>
        <textarea
          type="text"
          class="form-control"
          rows="3"
          id="notes"
          name="notes"
        ></textarea>
      </div>

      <!-- Buttons -->
      <button type="submit" class="btn btn-primary">Thêm</button>
      <button type="reset" class="btn btn-secondary">Làm mới</button>
    </form>
  </div>
</div>

<script>
  let columns = [
    { data: 'no', orderable: false },
    { data: 'date', searchable: true },
    { data: 'code', orderable: false },
    { data: 'products', orderable: false },
    { data: 'notes', orderable: false },
    { data: 'total', orderable: false },
    { data: 'status',
      render: function (data) {
        return data ==='active' ? `  <div class="row">
          <div class="col text-center "  >
            <div class="text-light bg-success rounded-2 py-1" style= "pointer-event: none">
              Đang mở
            </div>
          </div>
        </div>
      </div>` : `  <div class="row">
          <div class="col text-center "  >
            <div class="text-light bg-danger rounded-2 py-1" style= "pointer-event: none">
              Đã đóng
            </div>
          </div>
        </div>
      </div>`;
      },
     },
    {
      data: 'slug',
      orderable: false,
      render: function (data, type, row) {
        console.log(row)
        return `<div class="d-flex justify-content-between fs-5">
          <a href="/quan-ly-hop-dong/hop-dong/${data}" class="text-decoration-none text-dark">
            <i class="ri-edit-box-line" style="cursor: pointer;"></i>
          </a>
            
          <i class="ri-delete-bin-line" data-bs-toggle="modal" data-bs-target="#deleteModalToggle${
            row.no
          }" style="cursor: pointer;"></i>
          </div>`;
      },
    },
  ];

  initializeDataTable(
    '#table',
    '/quan-ly-hop-dong/getDatas',
    '#staticBackdrop',
    '#deleteModalToggle',
    columns,
    false,
    '#filterButton',
    '#startDate',
    '#endDate',
    '#clearFilterButton',
    false,
    false,
    false,
    false,
    false,
    false,
    false,
  );

  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.productLists').forEach(list => {
      const items = list.querySelectorAll('.productList');
      items.forEach(item => item.querySelector('.ri-close-line').style.display = items.length > 1 ? 'block' : 'none');
    });
  });
</script>
