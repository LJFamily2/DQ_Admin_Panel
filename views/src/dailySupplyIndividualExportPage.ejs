  <div class="col-12 col-md-3 mt-2 d-none d-md-block">
    <div class="card" style="box-shadow: 0 1px 2px">
      <div class="card-header bg-transparent">
        <h4 class="m-0">Thông tin cá nhân</h4>
      </div>

      <form
        action="/du-lieu-hang-ngay/updateSupplier/<%= supplierData._id %>"
        method="post"
      >
        <div class="card-body">
          <%- include('../partials/notificationMessage.ejs') %>
          <div class="modal-body">
            <div class="row">
              <div class="col col-md-6">
                <label for="name" class="form-label fw-bold">Tên</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  maxlength="30"
                  value="<%= supplierData.name %>"
                  required
                />
              </div>
              <div class="col col-md-6">
                <label for="code" class="form-label fw-bold">Mã</label>
                <input
                  type="text"
                  class="form-control"
                  id="code"
                  name="code"
                  maxlength="20"
                  value="<%= supplierData.code %>"
                  required
                  disabled
                />
              </div>
            </div>
            <div class="mt-3">
              <label for="manager" class="form-label fw-bold">Vai trò</label>
              <select class="form-select" id="manager" name="manager" required disabled>
                <option value="false" <%= supplierData.manager === false ? 'selected' : '' %>>Nhà vườn</option>
                <option value="true" <%= supplierData.manager === true ? 'selected' : '' %>>Quản lý</option>
              </select>
            </div>
            <div class="mt-3">
              <label for="phone" class="form-label fw-bold"
                >Số điện thoại</label
              >
              <input
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                maxlength="10"
                oninput="this.value = this.value.replace(/\D/g, '');"
                value="<%= supplierData.phone %>"
                required
                disabled
                />
            </div>
            <div class="row">
              <div class="col-7 mt-3">
                <label for="identification" class="form-label fw-bold"
                  >Căn cước công dân</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="identification"
                  name="identification"
                  maxlength="12"
                  value="<%= supplierData.identification %>"
                  required
                  disabled
                />
              </div>
              <div class="col-5 mt-3">
                <label for="issueDate" class="form-label fw-bold"
                  >Ngày cấp</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="issueDate"
                  name="issueDate"
                  oninput="this.value = this.value.replace(/\D/g, '').replace(/(\d{2})(?=\d)/g, '$1/');"
                  maxlength="8"
                  value="<%= supplierData.issueDate %>"
                  required
                  disabled
                />
              </div>
            </div>
            <div class="mt-3">
              <label  class="form-label fw-bold"
                >Địa chỉ</label
              >
              <input
                type="text"
                class="form-control"
                name="supplierAddress"
                value="<%= supplierData.supplierAddress %>"
                maxlength="70"
                disabled
              />
            </div>
            <div class="mt-3">
              <label for="purchasedAreaDimension" class="form-label fw-bold">Diện tích mua (mẫu)</label>
              <input type="hidden" name="remainingAreaDimension" value="<%= area.remainingAreaDimension %>">
              <input type="hidden" name="slug" value="<%= area.slug %>">
              <input
                type="number"
                class="form-control"
                id="purchasedAreaDimension"
                name="purchasedAreaDimension"
                step="0.1"
                min="0"
                value="<%= supplierData.purchasedAreaDimension %>"
              />
            </div>
            <div class="mt-3">
              <label for="purchasedAreaPrice" class="form-label fw-bold">Giá mua (VNĐ/mẫu)</label>
              <input
                type="text"
                class="form-control"
                id="purchasedAreaPrice"
                name="purchasedAreaPrice"
                min="0"
                oninput="handleQuantityInput(this)"
                value="<%= supplierData.purchasedAreaPrice.toLocaleString('vi-VN') %>"
              />
            </div>
            <div class="mt-3">
              <label for="areaDeposit" class="form-label fw-bold">Tiền đặt cọc</label>
              <input
                type="text"
                class="form-control"
                id="areaDeposit"
                name="areaDeposit"
                min="0"
                oninput="handleQuantityInput(this)"
                value="<%= supplierData.areaDeposit.toLocaleString('vi-VN') %>"
              />
            </div>
            <div class="mt-3">
              <div class="row">
                <div class="col-6">
                  <label for="debt" class="form-label fw-bold">Nợ còn lại</label>
                  <input
                    type="text"
                    class="form-control"
                    id="debt"
                    value="<%= remainingDebt > 0 ? remainingDebt.toLocaleString('vi-VN') : 0 %>"
                    disabled
                  />
                </div>
                <div class="col-6">
                  <label for="remaining" class="form-label fw-bold">Tổng tiền giữ lại</label>
                  <input
                    type="text"
                    class="form-control"
                    id="remaining"
                    value="<%= totalMoneyRetainedAmount > 0 ? totalMoneyRetainedAmount.toLocaleString('vi-VN') : 0 %>"
                    disabled
                  />
                </div>
              </div>
            </div>
            <div class="mt-3">
              <label class="form-label fw-bold">Thời hạn mua</label>
              <div class="row">
                <div class="col-6">
                  <label for="areaDurationStart" class="form-label">Ngày bắt đầu</label>
                  <input
                    type="date"
                    class="form-control"
                    id="areaDurationStart"
                    name="areaDuration[start]"
                    value="<%= supplierData.areaDuration.start ? supplierData.areaDuration.start.toISOString().split('T')[0] : '' %>"
                  />
                </div>
                <div class="col-6">
                  <label for="areaDurationEnd" class="form-label">Ngày kết thúc</label>
                  <input
                    type="date"
                    class="form-control"
                    id="areaDurationEnd"
                    name="areaDuration[end]"
                    value="<%= supplierData.areaDuration.end ? supplierData.areaDuration.end.toISOString().split('T')[0] : '' %>"
                  />
                </div>
              </div>
            </div>
            <div class="mt-3">
              <label
                for="advancePayment"
                class="form-label fw-bold"
                >Tiền ứng</label
              >
              <input
                type="text"
                class="form-control"
                id="advancePayment"
                name="advancePayment"
                value="<%= supplierData.advancePayment.toLocaleString('vi-VN') %>"
                oninput="handleQuantityInput(this)"
              />
            </div>
            <div class="mt-3">
              <label for="ratioRubberSplit" class="form-label fw-bold">Ăn chia mủ mặc định</label>
              <input
                type="text"
                class="form-control"
                id="ratioRubberSplit"
                name="ratioRubberSplit"
                value="<%= supplierData.ratioRubberSplit.toLocaleString('vi-VN') %>"
                oninput="handlePercentageInput(this)"
              />
            </div>
            <div class="mt-3">
              <label for="ratioSumSplit" class="form-label fw-bold"
                >Ăn chia tổng mặc định</label
              >
              <input
                type="text"
                class="form-control"
                id="ratioSumSplit"
                name="ratioSumSplit"
                value="<%= supplierData.ratioSumSplit.toLocaleString('vi-VN') %>"
                min="1"
              />
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent">
          <button type="submit" class="btn btn-primary">Lưu mới</button>
        </div>
      </form>
    </div>
  </div>
</div>


<script>
  let areaDimension = '<%= area.areaDimension %>';
  let areaPrice = '<%= area.areaPrice %>';

  const columns = parseFloat(areaDimension) === 0 && parseFloat(areaPrice) === 0 ? [
    { data: 'no', orderable: false },
    { data: 'date' },
    { data: 'muNuocQuantity', orderable: false },
    { data: 'muHamLuong', orderable: false },
    { data: 'muQuyKhoTotal', orderable: false },
    { data: 'muQuyKhoPrice', orderable: false },
    { data: 'muTapQuantity', orderable: false },
    { data: 'muTapPrice', orderable: false },
    { data: 'muKeQuantity', orderable: false },
    { data: 'muKePrice', orderable: false },
    { data: 'muDongQuantity', orderable: false },
    { data: 'muDongPrice', orderable: false },
    { data: 'note', orderable: false },
    { data: 'id', orderable: false },
  ] : [
    { data: 'no', orderable: false },
    { data: 'date' },
    { data: 'muNuocQuantity', orderable: false },
    { data: 'muHamLuong', orderable: false },
    { data: 'muQuyKhoTotal', orderable: false },
    { data: 'muNuocRatioSplit', orderable: false },
    { data: 'muQuyKhoTotalAfterSplit', orderable: false },
    { data: 'muQuyKhoPrice', orderable: false },
    { data: 'muQuyKhoTotalPrice', orderable: false },
    { data: 'muTapQuantity', orderable: false },
    { data: 'muTapRatioSplit', orderable: false },
    { data: 'muTapTotalAfterSplit', orderable: false },
    { data: 'muTapPrice', orderable: false },
    { data: 'muTapTotalPrice', orderable: false },
    { data: 'muKeQuantity', orderable: false },
    { data: 'muKeRatioSplit', orderable: false },
    { data: 'muKeTotalAfterSplit', orderable: false },
    { data: 'muKePrice', orderable: false },
    { data: 'muKeTotalPrice', orderable: false },
    { data: 'muDongQuantity', orderable: false },
    { data: 'muDongRatioSplit', orderable: false },
    { data: 'muDongTotalAfterSplit', orderable: false },
    { data: 'muDongPrice', orderable: false },
    { data: 'muDongTotalPrice', orderable: false },
    { data: 'totalPrice', orderable: false },
    { data: 'note', orderable: false },
    { data: 'id', orderable: false },
  ];

  initializeExportDataTable(
    '#table',
    `/du-lieu-hang-ngay/<%= area.slug %>/getSupplierExportData/<%= supplierData.supplierSlug %>`,
    '#staticBackdrop',
    '#deleteModalToggle',
    columns,
    false,
    '#filterButton',
    '#startDate',
    '#endDate',
    '#clearFilterButton',
    true,
    false,
    true,
    '#addPrice',
    '#minusPrice',
    '<%= supplierData.name %>',
    '<%= supplierData.ratioSumSplit %>',
    '<%= supplierData.ratioRubberSplit %>',
    {
      debt: '<%= remainingDebt %>',
      retainedAmount: '<%= totalMoneyRetainedAmount %>'
    },
    {
      areaDimension: '<%= area.areaDimension %>',
      areaPrice: '<%= area.areaPrice %>'
    }
  );

  tippy('.tooltip-wrapper');
</script>
