                                      id="muNuocPercentage<%= index %>"
                                      name="muNuocPercentage"
                                      value="<%= raw.percentage.toLocaleString('vi-VN') %>"
                                      required
                                      oninput="handlePercentageInput(this)"
                                    />
                                  </div>
                                </div>
                                <div class="row my-3">
                                  <div class="col">
                                    <label for="price<%= index %>" class="form-label">Đơn giá</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="price<%= index %>"
                                      name="muNuocPrice"
                                      value="<%= raw.price?  raw.price.toLocaleString('vi-VN'): '' %>"
                                      oninput="handleQuantityInput(this)"
                                    />
                                  </div>
                                  <div class="col">
                                    <label for="muNuocRatioSplit<%= index %>" class="form-label">Tỷ lệ (%)</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muNuocRatioSplit<%= index %>"
                                      name="muNuocRatioSplit"
                                      value="<%= raw.ratioSplit ? raw.ratioSplit.toLocaleString('vi-VN') : '100' %>"
                                      oninput="handlePercentageInput(this)"
                                    />
                                  </div>
                                </div>
                              </div>
                            <% } else if (raw.name === 'Mủ tạp') { %>
                              <div class="itemList">
                                <div class="row my-3">
                                  <label class="form-label fw-bold">Mủ tạp</label>
                                  <div class="col col-md-6">
                                    <label for="muTapQuantity<%= index %>" class="form-label">Số lượng</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muTapQuantity<%= index %>"
                                      name="muTapQuantity"
                                      value="<%= raw.quantity %>"
                                      required
                                      oninput="handleQuantityInput(this)"
                                    />
                                  </div>
                                  <div class="col col-md-6">
                                    <label for="price<%= index %>" class="form-label">Đơn giá</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="price<%= index %>"
                                      name="muTapPrice"
                                      value="<%= raw.price?  raw.price.toLocaleString('vi-VN'): '' %>"
                                      oninput="handleQuantityInput(this)"
                                    />
                                </div>
                                </div>
                                <div class="row my-3">
                                  <div class="col">
                                    <label for="muTapRatioSplit<%= index %>" class="form-label">Tỷ lệ (%)</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muTapRatioSplit<%= index %>"
                                      name="muTapRatioSplit"
                                      value="<%= raw.ratioSplit ? raw.ratioSplit.toLocaleString('vi-VN') : '100' %>"
                                      oninput="handlePercentageInput(this)"
                                    />
                                  </div>
                                </div>
                              </div>
                            <% } else if (raw.name === 'Mủ ké') { %>
                              <div class="itemList">
                                <div class="row my-3">
                                  <label class="form-label fw-bold">Mủ Ké</label>
                                  <div class="col col-md-6">
                                    <label for="muKeQuantity<%= index %>" class="form-label">Số lượng </label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muKeQuantity<%= index %>"
                                      name="muKeQuantity"
                                      value="<%= raw.quantity %>"
                                      required
                                      oninput="handleQuantityInput(this)"
                                    />
                                  </div>
                                  <div class="col col-md-6">
                                    <label for="muKePrice<%= index %>" class="form-label">Đơn giá</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muKePrice<%= index %>"
                                      name="muKePrice"
                                      value="<%= raw.price ? raw.price.toLocaleString('vi-VN') : '' %>"
                                      oninput="handleQuantityInput(this)"
                                    />
                                  </div>
                                </div>
                                <div class="row my-3">
                                  <div class="col">
                                    <label for="muKeRatioSplit<%= index %>" class="form-label">Tỷ lệ (%)</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muKeRatioSplit<%= index %>"
                                      name="muKeRatioSplit"
                                      value="<%= raw.ratioSplit ? raw.ratioSplit.toLocaleString('vi-VN') : '100' %>"
                                      oninput="handlePercentageInput(this)"
                                    />
                                  </div>
                                </div>
                              </div>
                            <% } else if (raw.name === 'Mủ đông') { %>
                              <div class="itemList">
                                <div class="row my-3">
                                  <label class="form-label fw-bold">Mủ Đông</label>
                                  <div class="col col-md-6">
                                    <label for="muDongQuantity<%= index %>" class="form-label">Số lượng</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muDongQuantity<%= index %>"
                                      name="muDongQuantity"
                                      value="<%= raw.quantity %>"
                                      required
                                      oninput="handleQuantityInput(this)"
                                    />
                                  </div>
                                  <div class="col col-md-6">
                                    <label for="muDongPrice<%= index %>" class="form-label">Đơn giá</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muDongPrice<%= index %>"
                                      name="muDongPrice"
                                      value="<%= raw.price ? raw.price.toLocaleString('vi-VN') : '' %>"
                                      oninput="handleQuantityInput(this)"
                                    />
                                  </div>
                                </div>
                                <div class="row my-3">
                                  <div class="col">
                                    <label for="muDongRatioSplit<%= index %>" class="form-label">Tỷ lệ (%)</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="muDongRatioSplit<%= index %>"
                                      name="muDongRatioSplit"
                                      value="<%= raw.ratioSplit ? raw.ratioSplit.toLocaleString('vi-VN') : '100' %>"
                                      oninput="handlePercentageInput(this)"
                                    />
                                  </div>
                                </div>
                              </div>
                            <% } %>
                          <% }) %>
                        </div>
                        <div class="my-3">
                          <label for="note<%= index %>" class="form-label fw-bold">Ghi chú</label>
                          <textarea
                          class="form-control"
                          id="note<%= index %>"
                          name="note"
                          rows="3"
                          ><%= item.note %></textarea>
                        </div>
                        <div class="my-3">
                          <label for="moneyRetainedPercentage<%= index %>" class="form-label fw-bold">% tiền giữ lại</label>
                          <input type="text" class="form-control" id="moneyRetainedPercentage<%= index %>" name="moneyRetainedPercentage" value="<%= item.moneyRetained?.percentage ? item.moneyRetained?.percentage.toLocaleString('vi-VN') : ''  %>" oninput="handlePercentageInput(this)">
                        </div>
                      </div>
                      <div class="modal-footer bg-transparent">
                        <!-- Buttons -->
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <button type="reset" class="btn text-dark">Làm mới</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <!-- Delete confirming modal  -->
              <div
                class="modal fade"
                id="deleteModalToggle<%= item._id %>"
                aria-hidden="true"
                aria-labelledby="exampleModalToggleLabel"
                tabindex="-1"
              >
                <div class="modal-dialog modal-dialog-centered">
                  <!-- Debug output -->
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
                        Xóa thông tin ngày <%= item.date.toLocaleDateString("vi-VN") %> của <%= supplierData.name %>
                      </h1>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                      ></button>
                    </div>
                    <form
                      action="/nhap-du-lieu/nguyen-lieu/deleteData/<%= item._id %>"
                      method="post"
                    >
                      <div class="modal-body">
                        Bạn có muốn xóa thông tin của
                        <strong><%= supplierData.name %></strong>
                        ? Hành động này không thể hoàn tác.
                      </div>
                      <div class="modal-footer">
                        <% if(user.role === 'Admin' || user.role === 'Văn phòng'){ %>
                        <button type="submit" class="btn btn-danger">
                          Xác nhận
                        </button>
                        <% } else { %>
                        <div
                          class="tooltip-wrapper"
                          data-tippy-content="Bạn không có quyền thao tác"
                          tabindex="0"
                        >
                          <button type="button" class="btn btn-danger" disabled>
                            Xác nhận
                          </button>
                        </div>
                        <% } %>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            <% }) %>
          </tbody>
          <tfoot>
            <% if (area.areaDimension > 0 && area.areaPrice > 0) { %>
              <tr>
                <th colspan="2">Tổng</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
